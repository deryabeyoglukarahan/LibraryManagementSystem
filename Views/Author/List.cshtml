@model List<LibraryManagementSystem.Models.Author>

@{
    ViewData["Title"] = "Yazar Listesi";
}

<div class="text-center mb-4">
    <div class="section-title">Yazar Listesi</div>
    <div class="title-underline"></div>
</div>

<div class="mb-3 text-end">
    <a class="btn custom-btn" href="/Author/Create">
        <i class="bi bi-plus-lg"></i> Yeni Yazar Ekle
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Ad Soyad</th>
                <th>Doğum Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>@author.FirstName @author.LastName</td>
                    <td>@author.DateOfBirth.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="/Author/Details/@author.Id"><i
                                class="bi bi-info-circle"></i></a>
                        <a class="btn btn-warning btn-sm" href="/Author/Edit/@author.Id"><i
                                class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-danger btn-sm" href="/Author/Delete/@author.Id"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
