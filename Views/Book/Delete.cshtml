@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Kitap Sil";
}

<h3 class="delete-title">@ViewData["Title"]</h3>

<div class="alert alert-danger">
    <strong>@Model.Title</strong> adlı kitabı silmek istediğinizden emin misiniz?
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a href="/Book/List" class="btn btn-secondary">Vazgeç</a>
</form>
