@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Kitap Düzenle";
}

<h3>@ViewData["Title"]</h3>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label>Başlık:</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Tür:</label>
        <input asp-for="Genre" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Yayın Tarihi:</label>
        <input asp-for="PublishDate" type="date" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>ISBN:</label>
        <input asp-for="ISBN" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Mevcut Kopya:</label>
        <input asp-for="CopiesAvailable" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Yazar:</label>
        <select asp-for="AuthorId" class="form-control"
            asp-items="@(new SelectList(ViewBag.Authors, "Id", "FullName", Model.AuthorId))">
            <option value="">-- Yazar Seçiniz --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="/Book/List" class="btn btn-secondary">İptal</a>
</form>
